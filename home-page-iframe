<iframe 
  src="https://cdn.jsdelivr.net/gh/dean-atv/testimonial-plugins@latest/home-page.html"
  style="width:100%;border:0;overflow:hidden;"
  id="atv-testimonials"
></iframe>

<script>
window.addEventListener("message", (event) => {
  if (event.data?.type === "resize-testimonials") {
    document.getElementById("atv-testimonials").style.height =
      event.data.height + "px";
  }
});
</script>
