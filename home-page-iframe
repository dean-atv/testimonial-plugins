<iframe
  src="https://rawcdn.githack.com/dean-atv/testimonial-plugins/main/home-page.html"
  style="width:100%; border:0; overflow:hidden;"
  id="home-testimonials"
></iframe>

<script>
window.addEventListener("message", function(event) {
  if (event.data?.type === "resize-testimonials") {
    const iframe = document.getElementById("home-testimonials");
    if (iframe) iframe.style.height = event.data.height + "px";
  }
});
</script>
